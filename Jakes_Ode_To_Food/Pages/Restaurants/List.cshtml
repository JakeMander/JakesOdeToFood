@page
@model Jakes_Ode_To_Food.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "View Restaurants";
}

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span>
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Location</td>
        <td>Cuisine</td>
    </tr>

    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Details"
                   asp-route-restaurantId="@restaurant.Id">
                    <span><i class="fas fa-search-plus"></i></span>
                </a>
                
                <a class="btn btn-lg"
                   asp-page="./Edit"
                   asp-route-restaurantId="@restaurant.Id">
                    <span><i class="fas fa-edit"></i></span>
                </a>
            </td>
        </tr>
    }
</table>
<p>@Model.Message</p>